<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Logo -->
    <FrameLayout
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/logo" />

        <ImageButton
            android:id="@+id/btnBefore"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_navigate_before_24"
            android:backgroundTint="#47BE55"
            android:layout_marginRight="350dp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/study_Image"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/javastudy"
            android:scaleType="centerCrop" />


        <!--  ImageView의 layout에 꽉 차게 크기를 맞춰 출력(비율유지)  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/study_NameM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="java study"
                android:textSize="40dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/hashtagM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="#java#코딩#개발자"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:gravity="center"/>

        </LinearLayout>

    </FrameLayout>

    <ListView
        android:id="@+id/listStudy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/study_screen_shadow"
        android:orientation="vertical" />

    <android.widget.Button
        android:id="@+id/addWork"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/round"
        android:backgroundTint="#47BE55"
        android:text="과제 만들기"
        android:textColor="@color/white"
        android:textSize="17dp" />

</LinearLayout>