<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:src="@drawable/logo"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/study_Image"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/javastudy"
            android:scaleType="centerCrop" />


        <!--  ImageView의 layout에 꽉 차게 크기를 맞춰 출력(비율유지)  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/study_NameM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="java study"
                android:textSize="40dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/hashtagM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="#java#코딩#개발자"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:gravity="center"/>

            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_gravity="center"
                android:background="@drawable/study_screen_oval">

                <TextView android:id="@+id/DdayM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D-40"
                    android:textSize="15dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"/>

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

