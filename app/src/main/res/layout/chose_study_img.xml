<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:text="대표 이미지를 선택해주세요!"
        android:textColor="#272727"
        android:textSize="23dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/chose_image" />

    <Button
        android:id="@+id/choseImage"
        android:layout_width="330dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:backgroundTint="#E5F6E7"
        android:drawableTop="@drawable/icon_img"
        android:paddingTop="65dp"
        android:paddingBottom="50dp"
        android:text="360 X 173"
        android:textColor="#8CCF94"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="※ 선택 하지 않을 시 기본 배경으로 삽입됩니다. ※"
        android:textColor="#9C9C9C"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="134dp"
        android:background="@drawable/round"
        android:backgroundTint="#47BE55"
        android:text="다음 단계로 이동"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <View
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/circle"
            android:backgroundTint="#47BE55" />

        <View
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/circle"
            android:backgroundTint="#D9D9D9" />

        <View
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/circle"
            android:backgroundTint="#D9D9D9" />
    </LinearLayout>
</LinearLayout>