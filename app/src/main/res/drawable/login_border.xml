<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer rectangle with rounded corners and border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" /> <!-- Adjust the radius value for desired roundness -->
            <stroke
                android:width="2dp"
                android:color="#C9C9C9" /> <!-- Border properties -->
        </shape>
    </item>

    <!-- Inner rectangle with left padding of 30dp and top margin of 30dp -->

    <shape android:shape="rectangle">
        <solid android:color="#ffffff" />
    </shape>

</layer-list>